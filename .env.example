# ============================================
# Deep Research Agent - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# LLM Configuration
# ============================================
OPENAI_API_KEY=sk-...your-openai-api-key...
OPENAI_MODEL=gpt-5-mini

# ============================================
# Web Search Configuration
# ============================================
TAVILY_API_KEY=tvly-...your-tavily-api-key...

# ============================================
# Authentik SSO Configuration
# ============================================
# Get these from your Authentik instance after creating the app
AUTHENTIK_OIDC_DISCOVERY=https://authentik.example.com/application/o/deep-agent/.well-known/openid-configuration
AUTHENTIK_CLIENT_ID=your-client-id
AUTHENTIK_CLIENT_SECRET=your-client-secret
AUTHENTIK_REDIRECT_URI=http://localhost:3000/auth/callback

# Session configuration
SESSION_SECRET=your-random-session-secret-min-32-chars-long

# ============================================
# SMTP Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# SMTP_SECURE is auto-detected from port (465=true, 587=false)
# Only set explicitly if you need to override:
# SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=research-agent@example.com
SMTP_TO=recipients@example.com
# Set to false for self-hosted SMTP with self-signed certificates:
# SMTP_REJECT_UNAUTHORIZED=false

# ============================================
# Cron Schedule
# ============================================
# Standard cron format: "minute hour day month day-of-week"
# Examples:
#   "0 9 * * *"     = Every day at 9:00 AM
#   "0 9 * * 1-5"   = Weekdays at 9:00 AM
#   "0 */6 * * *"   = Every 6 hours
CRON_SCHEDULE=0 9 * * *

# ============================================
# Database Configuration
# ============================================
DATABASE_PATH=./research.db

# ============================================
# Server Configuration
# ============================================
PORT=3000
NODE_ENV=development

# Debug logging
DEBUG=false
